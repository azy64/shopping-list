        "collectCoverageFrom": [
            "**/*.{ts,tsx,js,jsx}",
            "!**/coverage/**",
            "!**/node_modules/**",
            "!**/babel.config.js",
            "!**/expo-env.d.ts",
            "!**/.expo/**",
            "!**/__tests__/**"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "cobertura",
            "html"
        ],
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "outputDirectory": "coverage",
                    "outputName": "junit.xml",
                    "classNameTemplate": "{classname}",
                    "titleTemplate": "{title}",
                    "ancestorSeparator": " â€º ",
                    "usePathForSuiteName": "true"
                }
            ]
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        }
    },
    "private": true
